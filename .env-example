# =========================
# Server
# =========================
PORT=3000
HOST=0.0.0.0

# =========================
# Security / API Access
# =========================
# Set to true to require an API key for /v1 routes
REQUIRE_API_KEY=false

# Comma-separated list of valid API keys
API_KEYS=devkey1,devkey2

# =========================
# Rate limiting
# =========================
# Requests per IP per minute
RATE_LIMIT_PER_MIN=60

# =========================
# CORS
# =========================
# Comma-separated list of allowed origins
# Empty = allow all (NOT recommended for production)
CORS_ORIGINS=

# Example:
# CORS_ORIGINS=https://example1.de,https://example2.com

# =========================
# Astro / Swiss Ephemeris
# =========================
# Default house system (P = Placidus)
DEFAULT_HOUSE_SYSTEM=P

# =========================
# Runtime
# =========================
NODE_ENV=development
